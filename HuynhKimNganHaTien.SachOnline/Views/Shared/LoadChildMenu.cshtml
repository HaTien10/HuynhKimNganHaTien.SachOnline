
@model IEnumerable<HuynhKimNganHaTien.SachOnline.Models.MENU>
@{
    int i = 0;
    @:<ul class="dropdown-menu">
        foreach (var item in Model)
        {
            if (ViewBag.lst[i] != 0)
            {
                <li class="dropdown-submenu">
                    <a href="#" class="test list-group-item">
                        @item.MenuName <span class="caret"></span>
                    </a>
                    @Html.Action("LoadChildMenu", "SachOnline", new { parentId = item.Id })
                </li>
            }
            else
            {
                <li>
                    <a href="~/@item.MenuLink" class="list-group-item">@item.MenuName</a>
                </li>
            }
            i++;
        }
    @:</ul>
}
<style>
    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
</style>
<script>
    $(document).ready(function () {
        $('.dropdown-submenu a.test').on("click", function (e) {
            $(this).next('ul').toggle();

            e.stopPropagation(); /*Phương thức stopPropagation() của đối tượng event
             * được sử dụng để ngăn không cho sự kiện lan toả lên các phần tử cha
             * của phần tử diễn ra sự kiện.*/
            e.preventDefault(); /*Phương thức preventDefault() của đối tượng event
             * được sử dụng để ngăn chặn xử lý mặc định của trình duyệt khi xảy ra sự kiện.*/
        });
    });
</script>